APP_NAME="Uangku"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# ============================================
# Database Configuration
# ============================================
# Default: sqlite (untuk development cepat)
# Untuk production, ganti ke mysql atau pgsql
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# Jika pakai MySQL, uncomment dan isi:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=uangku
# DB_USERNAME=root
# DB_PASSWORD=

# Jika pakai PostgreSQL:
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=uangku
# DB_USERNAME=root
# DB_PASSWORD=

DB_FOREIGN_KEYS=true

# ============================================
# Telegram Bot Configuration
# ============================================
# Token dari BotFather (contoh: 123456789:ABCdefGHIjklMNOpqrsTUVwxyz)
TELEGRAM_BOT_TOKEN=

# Username bot tanpa @ (contoh: kepengku_bot)
TELEGRAM_BOT_USERNAME=kepengku_bot

# URL webhook (optional). Jika kosong, akan pakai APP_URL
# Untuk development dengan ngrok: https://abcd-1234.ngrok.io
# Untuk production: https://uangku.com
TELEGRAM_WEBHOOK_URL=

# API URL Telegram (default sudah benar, jarang perlu diubah)
TELEGRAM_API_URL=https://api.telegram.org

# ============================================
# OpenAI Configuration
# ============================================
# API Key dari OpenAI (contoh: sk-...)
OPENAI_API_KEY=

# Base URL (default sudah benar, bisa diubah untuk proxy/custom endpoint)
OPENAI_BASE_URL=https://api.openai.com

# Model yang dipakai (default: gpt-4.1-mini)
OPENAI_MODEL=gpt-4.1-mini

# ============================================
# Cache & Session
# ============================================
CACHE_STORE=database
CACHE_PREFIX=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ============================================
# Queue Configuration
# ============================================
QUEUE_CONNECTION=database

# ============================================
# Mail Configuration (Optional)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# Filesystem
# ============================================
FILESYSTEM_DISK=local

# ============================================
# Logging
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# Authentication
# ============================================
AUTH_GUARD=web
AUTH_PASSWORD_BROKER=users
AUTH_PASSWORD_TIMEOUT=10800

# ============================================
# AWS / S3 (Optional - untuk file storage)
# ============================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================
# Third Party Services (Optional)
# ============================================
# POSTMARK_TOKEN=
# RESEND_KEY=
# SLACK_BOT_USER_OAUTH_TOKEN=
# SLACK_BOT_USER_DEFAULT_CHANNEL=